pipeline {
    agent any

    environment {
        IMAGE_NAME = "hello-docker:latest"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Debug Workspace') {
            steps {
                sh '''
                    echo "ğŸ“‚ Workspace path:"
                    pwd

                    echo "ğŸ“„ Listing files in workspace:"
                    ls -la
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "ğŸ”§ Building Docker image..."
                    docker build -t ${IMAGE_NAME} .
                '''
            }
        }

        stage('Check Image Size') {
            steps {
                sh 'docker images ${IMAGE_NAME} --format "ğŸ“¦ Size: {{.Size}}"'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh '''
                    echo "ğŸš€ Running Docker container..."
                    docker run -d -p 3000:3000 --name hello-container ${IMAGE_NAME}
                '''
            }
        }

        stage('Verify Container') {
            steps {
                sh '''
                    echo "ğŸ” Verifying Docker container with curl..."
                    curl --retry 5 --retry-delay 2 http://localhost:3000
                '''
            }
        }
    }

    post {
        always {
            echo 'ğŸ§¹ Cleaning up Docker container...'
            sh '''
                docker stop hello-container || true
                docker rm hello-container || true
            '''
        }

        success {
            echo 'âœ… Hello Docker pipeline completed successfully!'
        }

        failure {
            echo 'âŒ Pipeline failed. Please check logs above.'
        }
    }
}
