pipeline {
    agent any
    
    stages {
        stage('create folder') {
            steps {
            sh '''
            mkdir -p test
            echo " âœ… Folder 'test created'"
            '''
        }
    }
    stage('set permissions') {
        steps {
            sh '''
            chmod 777 test
            echo " âœ…  full permissions are set on 'test'"
            '''
            
        }
    }
    stage('create file with test') {
        steps {
            sh '''
            echo "This is a simple test file" > test/info.txt
                echo "âœ… File 'info.txt' created with text"
                '''
        }
    }
    stage ('verify file') {
        steps {
            sh '''
            if [ -f test/info.txt ]; then
            echo "âœ… File 'info.txt' exists"
            else
              echo "âŒ File creation failed"
              exit 1
           fi
           '''
           
        }
    }
    stage('Final confirmantion'){
        steps {
            echo "ğŸ‰ Folder, permissions, and file created successfully!"
        }
        
    }
    
    }
}